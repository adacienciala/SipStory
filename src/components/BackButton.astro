---
/**
 * BackButton - Generic back navigation component
 * @param variant - "link" for subtle navigation, "button" for prominent action (e.g., error states)
 * @param text - Custom text (defaults to "Back")
 * @param destination - Custom destination (defaults to "/dashboard")
 */
interface Props {
  variant?: "link" | "button";
  text?: string;
  destination?: string;
}

const { variant = "link", text = "Back", destination = "/dashboard" } = Astro.props;
---

{
  variant === "link" ? (
    <a
      href={destination}
      class="inline-flex items-center gap-2 text-sm text-gray-600 transition-colors hover:text-gray-900"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m15 18-6-6 6-6" />
      </svg>
      {text}
    </a>
  ) : (
    <a
      href={destination}
      class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
    >
      {text}
    </a>
  )
}
